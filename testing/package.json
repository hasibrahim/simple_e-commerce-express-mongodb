{
  "name": "ecommerce-testing",
  "version": "1.0.0",
  "description": "Comprehensive unit and integration tests for e-commerce application",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:models": "jest models.test.js",
    "test:controllers": "jest controllers.test.js",
    "test:middleware": "jest middleware.test.js",
    "test:services": "jest services.test.js",
    "test:utils": "jest utils.test.js",
    "test:integration": "jest integration.test.js",
    "test:unit": "jest --testPathIgnorePatterns=integration.test.js",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "testing",
    "jest",
    "unit-tests",
    "integration-tests",
    "e-commerce",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "E-Commerce Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "nodemailer": "^6.9.7",
    "express": "^4.18.2",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "../**/*.js",
      "!../node_modules/**",
      "!../testing/**",
      "!../coverage/**",
      "!../*.config.js",
      "!../app.js",
      "!../server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testTimeout": 30000,
    "clearMocks": true,
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true
  }
}